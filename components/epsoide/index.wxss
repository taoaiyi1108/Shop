/* components/epsoide/index.wxss */

.container {
    height: 60rpx;
    display: inline-flex;
    flex-direction: row;
}

.index-container {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.plain {
    font-size: 32rpx;
}

.index {
    font-size: 60rpx;
    line-height: 60rpx;
    font-weight: 800;
    margin-right: 14rpx;
}

.line {
    height: 44rpx;
    margin-right: 14rpx;
    margin-bottom: 2rpx;
    border-left: 1px solid black;
}

.date-container {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    color: #999;
}

.month {
    font-size: 24rpx;
    line-height: 24rpx;
    margin-bottom: 2rpx;
}

.year {
    font-size: 20rpx;
}
