<view class="container">
    <view class='header'>
        <view class='search-container'>
            <image src='images/search.png' class='icon' />
            <input placeholder-class='in-bar' placeholder='书籍名' class='bar' auto-focus='true' bind:confirm="onConfirm" />
            <image src='images/cancel.png' class='cancel-img' />
        </view>
        <view bind:tap="onCancel" class='cancel'>取消</view>
    </view>
    <view>
        <view class='history'>
            <view class='title'>
                <view class='chunk'></view>
                <text>历史搜索</text>
            </view>
            <view class='tags'>
                    <block wx:for="{{historyWords}}" wx:key="eqire">
                        <tag-cmp text="{{item}}" />
                    </block>
                </view>
        </view>
        <view class='history hot-search'>
            <view class='title'>
                <view class='chunk'></view>
                <text>热门搜索</text>
            </view>
        </view>
    </view>

</view>