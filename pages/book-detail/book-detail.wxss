/* 组件外部的样式 */

.ex-tag1 {
    background-color: #fffdbb !important;
}

.ex-tag2 {
    background-color: #eefbff !important;
}

.content {
    text-indent: 58rpx;
    font-weight: 500;
}

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-bottom: 100rpx;
    font-size: 28rpx;
    color: #666;
}

.vertical {
    display: flex;
    flex-direction: column;
}

.description {
    color: #999;
    margin-right: 30rpx;
}
