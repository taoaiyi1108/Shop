<wxs src="../../util/filter.wxs" module="util" />

<view class="container">
    <view class='head'>
        <image src='{{book.image}}' />
        <text class='title'>{{book.title}}</text>
        <text class='author'>{{book.author}}</text>
    </view>
    <view class='sub-container'>
        <text class='headline'>短评</text>
        <text class='shadow' wx:if="{{comments == false}}">还没有短评</text>
        <view class='comment-container'>
            <block wx:for="{{util.limit(comments,15)}}" wx:for-item="item" wx:key="equie">
                <!-- <tag-cmp text="{{item.content}}" /> -->
                <!-- 要使用slot插槽 tag-cmp 就必须是一个双标签 -->
                <tag-cmp tag-class="{{tool.heightlight(index)}}" text="{{item.content}}">
                    <text class='num' slot="after">{{"+" + item.nums}}</text>
                </tag-cmp>
            </block>
        </view>
    </view>
    <view class='sub-container'>
        <text class='headline'>内容简介</text>
        <text class='content' decode='{{true}}'>{{util.format(book.summary)}}</text>
    </view>
    <view class='sub-container'>
        <text class='headline'>书本信息</text>
        <view class='detail-container'>
            <view class='vertical description'>
                <text>出版社</text>
                <text>出版年</text>
                <text>页数</text>
                <text>定价</text>
                <text>装帧</text>
            </view>
            <view class='vertical'>
                <text>{{book.publisher}}</text>
                <text>{{book.pubdate}}</text>
                <text>{{book.pages}}</text>
                <text>{{book.price}}</text>
                <text>{{book.binding}}</text>
            </view>
        </view>
    </view>
</view>
<!-- 短评 -->
<view class='post-container' wx:if="{{!posting}}">
    <view class='post-fake' bind:tap="onFakePost">
        <text>输入短评</text>
    </view>
    <like-cmp bind:like="onLike" class="like" like="{{likeStatus}}" count="{{likeCount}}" />
</view>

<view class='posting-container' wx:if="{{posting}}">
    <view class='posting-header'>
        <text wx:if="{{comments == true}}">仅可点击标签+1</text>
        <text wx:else>暂无短评</text>
        <text class='cancel' bind:tap="onCancel">取消</text>
    </view>
    <view class='comment-container'>
        <block wx:for="{{util.limit(comments,3)}}" wx:for-item="item" wx:key="equie">
            <!-- <tag-cmp text="{{item.content}}" /> -->
            <!-- 要使用slot插槽 tag-cmp 就必须是一个双标签 -->
            <tag-cmp bind:tapping="onPost" tag-class="{{tool.heightlight(index)}}" text="{{item.content}}">
                <text class='num' slot="after">{{"+" + item.nums}}</text>
            </tag-cmp>
        </block>
    </view>
    <input bind:comfirm="onPost" class='post' placeholder='短评最多12个字' />
</view>

<mask-cmp wx-if="{{posting}}" />

<wxs module="tool">
    var heightlight = function(index) {
        if (index == 0) {
            return 'ex-tag1'
        }
        if (index == 1) {
            return 'ex-tag2'
        }
        return '';
    }
    module.exports = {
        heightlight: heightlight
    }
</wxs>